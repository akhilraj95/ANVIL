{
  "manifest_version": 2,

  "name": "Anvil",
  "description": "Research Buddy",
  "version": "1.0",
  "commands": {
      "toggle-activate-anvil": {
        "suggested_key": {
          "default": "Alt+A",
          "mac": "Alt+A"
        },
        "description": "Toggle Anvil"

      },
      "highlight":{
        "suggested_key": {
          "default": "Alt+C",
          "mac": "Alt+C"
        },
        "description": "Highlight"
      }

  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Anvil Research"
  },
  "permissions": [
   "activeTab",
   "bookmarks"
   ]
}
